{
    "manifest_version": 3,
    "name": "TOTP Authenticator",
    "version": "1.0",
    "permissions": [
      "storage",
      "activeTab",
      "webRequest",
      "notifications",
      "identity",
      "scripting"
    ],
    "background": {
      "service_worker": "dist/background.bundle.js",
      "type": "module"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": [
      "*://login.microsoft.com/*"
    ]
  }
  